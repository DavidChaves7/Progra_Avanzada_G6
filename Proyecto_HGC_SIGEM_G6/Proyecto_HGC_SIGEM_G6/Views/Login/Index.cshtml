@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutClean";
    var logoUrl = Url.Content("~/images/hgc-logo.png");
}

<style>
    
    body {
        background: radial-gradient(70% 140% at 50% -30%, #1c2b66 0%, #0f1327 45%, #0b0e1b 100%) !important;
    }

    .login-card {
        width: 420px;
        border-radius: 16px;
        background: #1b1f2a;
        box-shadow: 0 16px 40px rgba(0,0,0,.55);
    }

    .login-logo {
        width: 84px;
        height: 84px;
        border-radius: 50%;
        background: #0f1322;
        border: 1px solid #2b3140;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

        .login-logo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

    .login-input {
        background: #272c3a;
        color: #e9ecef;
        border: 1px solid #353c4c;
    }

        .login-input::placeholder {
            color: #c9cfdb;
            opacity: .8;
        }

    .login-pill {
        background: #ffe8a3;
        color: #4b3b00;
        border-radius: 8px;
        padding: .5rem .75rem;
        font-size: .875rem;
    }

    .btn-hgc {
        background: #d72425;
        border: 0;
    }

        .btn-hgc:hover {
            filter: brightness(.92);
        }
</style>

<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 120px);">
    <div class="card text-light border-0 login-card">
        <div class="card-body p-4">

            <div class="d-flex flex-column align-items-center mb-3">
                <div class="login-logo mb-2">
                    <img src="@logoUrl" alt="HGC" asp-append-version="true" />
                </div>
                <h5 class="mb-0">HGC</h5>
            </div>

            @if (ViewBag.Mensaje != null)
            {
                <div class="login-pill mb-3 text-center">
                    @ViewBag.Mensaje
                </div>
            }
            @if (TempData["RegistroExitoso"] != null)
            {
                <div class="alert alert-success py-2 mb-3" role="alert">
                    @TempData["RegistroExitoso"]
                </div>
            }

            <form asp-action="Index" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-2">
                    <input name="correo" type="email" class="form-control login-input" placeholder="Email" required />
                </div>

                <div class="mb-3">
                    <input name="contrasena" type="password" class="form-control login-input" placeholder="Password" required />
                </div>

                <button type="submit" class="btn btn-hgc w-100">Sign in</button>

                <div class="text-center mt-3">
                    <small class="text-secondary">¿No tienes cuenta?</small>
                    <a asp-action="Registro" class="link-light ms-1">Regístrate</a>
                </div>
            </form>
        </div>
    </div>
</div>
