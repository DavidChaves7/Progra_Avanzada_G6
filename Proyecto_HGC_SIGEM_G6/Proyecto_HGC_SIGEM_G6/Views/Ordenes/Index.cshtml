@model IEnumerable<ModelHelper.Models.Ordenes.Orden>
@{
    ViewData["Title"] = "Orden Settings";
}

<div class="container-fluid">
    @*  *@
    @if (TempData["ok"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
            @TempData["ok"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    @if (TempData["err"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
            @TempData["err"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <div class="row g-3 mt-2">
        
        <div class="col-12 col-lg-5">
            <div class="card bg-dark text-light border-secondary shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3">Nuevo Orden</h4>

                    <form asp-action="Create" asp-controller="Ordenes" method="post" id="formOrden">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Usuario</label>
                            <input name="idUsuario" class="form-control bg-secondary border-0 text-light" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Producto</label>
                            <input name="idProducto" class="form-control bg-secondary border-0 text-light"
                                   placeholder="/api/ext/demo/kpi" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Cantidad</label>
                            <input name="Cantidad" type="number"
                                   class="form-control bg-secondary border-0 text-light" />
                        </div>

                        <button type="submit" class="btn btn-danger w-100">Guardar</button>
                    </form>
                </div>
            </div>
        </div>

       
        <div class="col-12 col-lg-7">
            <div class="card bg-dark text-light border-secondary shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3">Ordenes</h4>

                    <div class="table-responsive">
                        <table class="table table-dark table-striped align-middle">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Total</th>
                                    <th>Estado</th>
                                    <th>Fecha</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var w in Model)
                                {
                                    <tr>
                                        <td class="text-truncate" style="max-width:240px">@w.IdUsuario</td>
                                        <td>@w.IdProducto</td>
                                        <td>@w.Cantidad</td>
                                        <td>@w.Total</td>
                                        <td>@w.Estado</td>
                                        <td>@w.Fecha</td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@w.IdOrden" class="btn btn-sm btn-outline-light me-2" title="Editar">✏️</a>
                                            <form asp-action="Delete" asp-route-id="@w.IdOrden" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('¿Eliminar orden?');" title="Eliminar">
                                                    🗑
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @* <small class="text-secondary">TIP: La visibilidad avanzada (Private/Role) se puede agregar luego si decides extender el esquema.</small> *@
                </div>
            </div>
        </div>
    </div>
</div>

