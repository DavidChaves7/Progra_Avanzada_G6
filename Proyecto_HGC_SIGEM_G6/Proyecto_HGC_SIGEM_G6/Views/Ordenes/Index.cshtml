@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "_LayoutClean";
}

<link rel="stylesheet" href="~/css/Styles/Style-Login.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <h3 class="text-center mb-4">Iniciar sesión</h3>

                    <form method="post">
                        <div class="mb-3">
                            <label for="correo" class="form-label">Correo electrónico</label>
                            <input name="correo" type="email" class="form-control" id="correo" required />
                        </div>

                        <div class="mb-3">
                            <label for="contrasena" class="form-label">Contraseña</label>
                            <input name="contrasena" type="password" class="form-control" id="contrasena" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Ingresar</button>
                            <a href="/Login/Registro" class="btn btn-outline-secondary">¿No tienes cuenta? Regístrate</a>
                        </div>
                    </form>

                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-danger mt-3">@ViewBag.Mensaje</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
