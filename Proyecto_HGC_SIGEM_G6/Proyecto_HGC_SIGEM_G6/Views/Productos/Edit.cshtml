@model ModelHelper.Models.Productos.Producto
@{
    ViewData["Title"] = "Editar producto";
}

<div class="container mt-3">
    <div class="card bg-dark text-light border-secondary shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">Editar Widget</h4>
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdProducto" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control bg-secondary border-0 text-light" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Precio" class="form-label"></label>
                        <input asp-for="Precio" type="number" min="5" class="form-control bg-secondary border-0 text-light" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>

                    <div class="col-12 form-check form-switch mt-2">
                        <input asp-for="Activo" class="form-check-input" type="checkbox" role="switch" />
                        <label class="form-check-label" asp-for="Activo">Activo</label>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-danger">Guardar cambios</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}