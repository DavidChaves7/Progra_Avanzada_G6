@using Microsoft.AspNetCore.Http
@{
    var isLoggedIn = Context.Session.GetInt32("UserId") != null
                     || !string.IsNullOrEmpty(Context.Session.GetString("User"));
    var userEmail = Context.Session.GetString("User");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_HGC_SIGEM_G6</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_HGC_SIGEM_G6.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light">
    <header>
      
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark px-0">
            <div class="container-fluid px-0">
                <a class="navbar-brand fw-semibold ps-3" asp-area="" asp-controller="Home" asp-action="Index">
                    Proyecto_HGC_SIGEM_G6
                </a>

                <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse" data-bs-target="#topNav"
                        aria-controls="topNav" aria-expanded="false" aria-label="Mostrar navegación">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topNav">
                  
                    <ul class="navbar-nav">
                         <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li> 
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Productos" asp-action="Index">Productos Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Ordenes" asp-action="Index">Ordenes Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Widgets" asp-action="Index">Widget Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="APIs" asp-action="Index">APIs Externos</a>
                        </li>
                        @* 
                        *@
                    </ul>

                    
                    <ul class="navbar-nav ms-auto pe-3">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item me-2 d-none d-sm-flex align-items-center">
                                <span class="small text-white-50">@userEmail</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-light btn-sm">Cerrar sesión</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Login" asp-action="Index">Iniciar sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        
        <div class="border-top border-danger" style="height:2px;"></div>
    </header>

    <div class="container py-4">
        @* Mensajes comunes *@
        @if (TempData["RegistroExitoso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["RegistroExitoso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }
        

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container py-3">
            <span>&copy; @DateTime.Now.Year - Proyecto_HGC_SIGEM_G6</span>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
