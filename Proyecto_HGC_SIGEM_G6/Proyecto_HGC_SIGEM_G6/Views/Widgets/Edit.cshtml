@model ModelHelpes.Models.Widgets.Widget
@{
    ViewData["Title"] = "Editar Widget";
}

<div class="container mt-3">
    <div class="card bg-dark text-light border-secondary shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">Editar Widget</h4>
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdWidget" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control bg-secondary border-0 text-light" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Tipo" class="form-label"></label>
                        <select asp-for="Tipo" class="form-select bg-secondary border-0 text-light">
                            <option>Chart</option>
                            <option>Kpi</option>
                            <option>Text</option>
                            <option>Table</option>
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>

                    <div class="col-md-8">
                        <label asp-for="UrlApi" class="form-label">API URL</label>
                        <input asp-for="UrlApi" class="form-control bg-secondary border-0 text-light" />
                        <span asp-validation-for="UrlApi" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="FrecuenciaRefresco" class="form-label">Refresco (s)</label>
                        <input asp-for="FrecuenciaRefresco" type="number" min="5" class="form-control bg-secondary border-0 text-light" />
                        <span asp-validation-for="FrecuenciaRefresco" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ApiKey" class="form-label"></label>
                        <input asp-for="ApiKey" class="form-control bg-secondary border-0 text-light" />
                        <span asp-validation-for="ApiKey" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RutaImagen" class="form-label"></label>
                        <input asp-for="RutaImagen" class="form-control bg-secondary border-0 text-light" />
                        <span asp-validation-for="RutaImagen" class="text-danger"></span>
                    </div>

                    <div class="col-12 form-check form-switch mt-2">
                        <input asp-for="Activo" class="form-check-input" type="checkbox" role="switch" />
                        <label class="form-check-label" asp-for="Activo">Activo</label>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-danger">Guardar cambios</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
